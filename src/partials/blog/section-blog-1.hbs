<div class="in-blog-1" data-uk-grid>
    {{#each blogPage1.data}}
    <div class="in-stretch">
        <article class="uk-card uk-card-default uk-border-rounded">
            {{#if image}}
            <div class="uk-card-media-top">
                <img src="{{root}}{{image}}" alt="{{title}}">
            </div>
            {{/if}}
            <div class="uk-card-body">
                <h3>
                    <a href="{{root}}{{@root.blogPage1.asBlog}}/{{link}}" class="link-primary text-decoration-none">{{title}}</a>
                </h3>
                <p>{{{blocks.[0].data.text}}}</p>
                <div class="uk-flex">
                    {{#if @root.blogPage1.displayAuthor}}
                    <div class="uk-margin-small-right">
                        <img class="uk-border-pill uk-background-muted" src="{{root}}{{author.avatar}}" alt="image-team" width="32" height="32">
                    </div>
                    <div class="uk-flex uk-flex-middle">
                        <p class="uk-text-small uk-text-muted uk-margin-remove">
                            {{author.name}}
                            <span class="uk-margin-small-left uk-margin-small-right">â€¢</span>
                        </p>
                    </div>
                    {{/if}}
                    <div class="uk-flex uk-flex-middle">
                        <p class="uk-text-small uk-text-muted uk-margin-remove">
                            {{dateCreated}}
                        </p>
                    </div>
                </div>
            </div>
            <div class="uk-card-footer uk-clearfix">
                <div class="uk-float-left">
                    <span class="uk-label uk-label-success uk-text-small uk-border-pill">{{category}}</span>
                </div>
                <div class="uk-float-right">
                    <a href="{{root}}{{@root.blogPage1.asBlog}}/{{link}}" class="uk-button uk-button-text uk-text-primary">Read more<i class="fas fa-long-arrow-alt-right uk-margin-small-left"></i></a>
                </div>
            </div>
        </article>
    </div>
    {{/each}}
</div>