                        <div class="uk-width-1-1">
                            <label class="uk-form-label">Subject</label>
                            <input class="uk-input uk-border-rounded" id="subject" name="subject" type="text" placeholder="">
                        </div>
                        <div class="uk-width-1-1">
                            <label class="uk-form-label">Message</label>
                            <textarea class="uk-textarea uk-border-rounded" id="message" name="message" rows="6" placeholder=""></textarea>
                        </div>
                        <div class="uk-width-1-1">
                            <button class="uk-button uk-button-primary uk-border-rounded" id="sendemail" type="submit" name="submit">Send Message</button>
